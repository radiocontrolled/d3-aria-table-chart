{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prefer-const": ["error", {
            "destructuring": "any",
            "ignoreReadBeforeAssign": false
        }],
        "no-unused-vars": ["error", {
          "vars": "all",
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }],
        "no-console": "off"
    }
}